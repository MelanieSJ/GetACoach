<div class="wrapper">
<div class="container">







 <%= link_to "See my profile", user_path(current_user) %>




    <h1>My Dashboard</h1>

    <h2>
      <% if user_signed_in? %>
        Hello <%= current_user.name%>
      <% end  %>
    </h2>

    <div class="dashboard row">

      <div class="calender">
        <div class="book">
        <h3>Calendar</h3>
         <%= image_tag "calender.png", class: "calender_img" %>
      </div>
      </div>


      <div class="booking">
        <div class="book">
        <h3>My Bookings</h3>
        </div>
        <div class="details_booking">
          <% @bookings.each do |booking| %>
          <div class="card-product">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
                <div class="card-product-infos">
                  <h2><%= booking.service.name%></h2>
                  <p><%=booking.date%>
                    with <%= booking.service.user.name  %></p>
                    <%= link_to "Delete", booking_path(booking), method: :delete %>
                </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>


  </div>
</div>




