<div class="container">
  <div class="row service-index">
    <h1 class=text-center> Find your new favourite hobby</h1>
    <p class=text-center> See all services currently offered</p>
  </div>
  <div class="row service-display">
    <% @services.each do |service|%>
      <div
        class="service-card-box"
        style="margin-bottom: 10px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),  url('/assets/images<%= service.category %>.jpg');">
        <div class="service-title">
          <%= service.name %>
        </div>
        <div class="service-card-description">
          <p><%= service.user.name %></p>
          <p><%= service.description %></p>
          <p><%= service.address %></p>
          <p><%= service.price %>â‚¬</p>
        </div>
        <div class="service-card-image">
          <%= cl_image_tag service.user.photo, class: "coach-card-avatar", width: 100, height: 100, crop: :thumb, gravity: :face %>
        </div>
        <div class="service-card-links">
          <%= link_to "Book now", new_booking_path, class: "btn btn-services text-center" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row button">
    <%= link_to "Go back", root_path, class: "btn-coaches text-center" %>
  </div>
</div>



