<div class="container">
  <div class="row">
    <div class="service-card-box" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),  url('/assets/<%= @service.category %>.jpg');">
      <div class="service-title">
        <%= @service.name %>
      </div>
       <div class="service-card-description">
          <p><%= @service.user.name %></p>
          <p><%= @service.description %></p>
          <p><%= @service.address %></p>
          <p><%= @service.price %>€</p>
        </div>
        <div class="service-card-image">
        <%= cl_image_tag @service.user.photo, class: "coach-card-avatar", width: 100, height: 100, crop: :thumb, gravity: :face %>
        </div>
        <div class="service-card-booking">
        <%= link_to "Book now", new_booking_path, class: "btn btn-services" %>
        </div>
    </div>
    <div class="row text-center">
      <%= link_to "Edit the service", edit_service_path, class: "btn btn-coaches text-center" %>
      <%= link_to "Delete", service_path(@service), class: "btn-coaches text-center",
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  </div>
</div>



