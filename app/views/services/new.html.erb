<div class="wrapper">
  <div class="container" >
        <h1>Add a service</h1>
        <%= simple_form_for (@service) do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :address %>
          <%= f.input :category %>
          <%= f.input :city %>
          <div class="form-actions text-center">
             <%= f.button :submit, class: "btn-suc", value: "OK"%>
             <%= link_to "Cancel", user_path(current_user.id), class: "btn btn-suc" %>
          </div>
        <% end %>
  </div>
</div>


