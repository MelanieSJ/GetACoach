<h1> Edit your service </h1>

<%= simple_form_for (@service) do |f| %>
  <%= f.input :name %>

  <%= f.input :description %>

  <%= f.input :price %>

  <%= f.input :address %>

  <%= f.input :category %>

  <%= f.input :city %>

  <%= f.submit "Edit the service", class: "btn btn-primary" %>
<% end %>

<%= link_to "Cancel", user_path(current_user.id), class: "btn btn-default" %>
